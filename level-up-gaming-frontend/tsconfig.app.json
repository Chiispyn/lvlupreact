// tsconfig.app.json (Frontend - Aplicaci√≥n)
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["react-router-dom", "react-bootstrap", "react-feather"] 
  },
  "include": ["src"], 
  "exclude": ["node_modules"]
}