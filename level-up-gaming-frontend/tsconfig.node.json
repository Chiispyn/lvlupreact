// tsconfig.node.json (Frontend - Node/Vite)
{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "types": ["node"], // Habilita los tipos de Node.js para Vite
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": ["vite.config.ts"] 
}